<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.darwindeveloper.bchat">

    <uses-permission android:name="android.permission.BLUETOOTH" />
    <uses-permission android:name="android.permission.BLUETOOTH_ADMIN" />
    <uses-permission android:name="android.permission.VIBRATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".SearchDevicesActivity"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:label="Buscando Dispositivos bluetooth"
            android:theme="@style/AppThemeDialog" />
        <activity
            android:name=".InformacionActivity"
            android:label="Informacion y Autores"
            android:theme="@style/AppTheme.NoActionBar">

        </activity>

        <activity
            android:name=".SettingsActivity"
            android:label="@string/title_activity_settings" />
        <activity
            android:name=".ManualDeUsuarioActivity"
            android:label="Manual de Usuario">

        </activity>
    </application>

</manifest>